
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Creat Employee</a>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(E => E.Name)</th>
            <th>@Html.DisplayNameFor(E => E.Age)</th>
            <th>@Html.DisplayNameFor(E => E.Address)</th>
            <th>@Html.DisplayNameFor(E => E.Email)</th>
            <th>@Html.DisplayNameFor(E => E.Salary)</th>
            <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(E => E.IsActive)</th>
            <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
          
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach(var employee in Model)
            {
               <tr>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.Address</td>
                <td>@Html.DisplayFor(M => employee.Email)</td>
                <td>@Html.DisplayFor(M =>employee.Salary)</td>
                <td>@employee.PhoneNumber</td>
                <td>@Html.DisplayFor(M => employee.IsActive)</td>
                <td>@employee.HiringDate</td>
          
         
                <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@employee.Id">Details</a></td>
                <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@employee.Id">Update</a></td>
                <td><a  asp-action="Delete" class="btn btn-danger" asp-route-id="@employee.Id">Delete</a></td>
               
               </tr> 
            }
       
    </tbody>
</table>
